{
  "name": "inventory",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-inventory": "cds watch --open inventory/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy inventory --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db/my-inventory.sqlite"
        },
        "schema_evolution": "auto"
      },
      "[production]": {
        "auth": {
        "kind": "xsuaa",
        "roles": {
          "Read_Role": [
            "Read_Role",
            "$XSAPPNAME.Read"
          ],
          "Write_Role": [
            "Write_Role",
            "$XSAPPNAME.Write"
          ],
          "Token_Exchange": [
            "Token_Exchange",
            "uaa.user" 
          ]
        }
      },
        "db": {
          "kind": "hana"
        },
        "destinations": true,
        "html5-repo": true
      },
      "workzone": true,
      "html5-repo": true
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ]
}
